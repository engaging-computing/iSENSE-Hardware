<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="@android:style/Theme.Material.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/AppTheme.ActionBar</item>
        <item name="android:actionBarWidgetTheme">@style/AppTheme.Widget</item>
        <item name="android:popupMenuStyle">@style/AppTheme.PopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/AppTheme.DropDownListView</item>
        <item name="android:homeAsUpIndicator">@null</item>

        <!--   your app's branding color (for the app bar) -->
        <item name="android:colorPrimary">@color/actionbar_background</item>
        <!--   darker variant of colorPrimary (for status bar, contextual app bars) -->
        <item name="android:colorPrimaryDark">@color/actionbar_background</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">@color/actionbar_background</item>


    </style>

    <style name="PDTheme" parent="@android:style/Theme.Material.Dialog">
        <item name="android:alertDialogStyle">@style/CustomProgressDialogStyle</item>
        <item name="android:textColorPrimary">#000000</item>
    </style>

    <style name="CustomProgressDialogStyle">
        <item name="android:bottomBright">#FF0000</item>
        <item name="android:bottomDark">#FF0000</item>
        <item name="android:bottomMedium">#FF0000</item>
        <item name="android:centerBright">#FF0000</item>
        <item name="android:centerDark">#FF0000</item>
        <item name="android:centerMedium">#FF0000</item>
        <item name="android:fullBright">#FF0000</item>
        <item name="android:fullDark">#FF0000</item>
        <item name="android:topBright">#FF0000</item>
        <item name="android:topDark">#FF0000</item>
    </style>

    <style name="AppTheme.ActionBar" parent="@android:style/Widget.Material.Light.ActionBar">
        <item name="android:background">@color/actionbar_background</item>
        <item name="android:logo">@drawable/rsense_logo_right</item>
        <item name="android:displayOptions">showHome|useLogo</item>
        <item name="android:titleTextStyle">@style/AppTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="AppTheme.ActionBar.TitleTextStyle">
        <item name="android:color">@color/actionbar_text</item>
    </style>

    <style name="AppTheme.Widget" parent="@android:style/Theme.Material.Light">
        <item name="android:popupMenuStyle">@style/AppTheme.PopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/AppTheme.DropDownListView</item>
    </style>

    <style name="AppTheme.PopupMenu" parent="@android:style/Widget.Material.Light.ListPopupWindow" />

    <style name="AppTheme.DropDownListView" parent="@android:style/Widget.Material.Light.ListView.DropDown" />

</resources>