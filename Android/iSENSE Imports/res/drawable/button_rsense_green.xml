<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    <item android:state_enabled="false" >
        <shape>
            <gradient
                android:endColor="#83EB71"
                android:startColor="#beffa8"
                android:angle="90" />
            <stroke
                android:width="2dp"
                android:color="#CCCCCC" />
            <corners
                android:radius="15dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:endColor="#72CC62"
                android:startColor="#AFE69C"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#CCCCCC" />
            <corners
                android:radius="15dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:startColor="#B0B0B0"
                android:endColor="#A0A0A0"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#CCCCCC" />
            <corners
                android:radius="15dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="#83EB71"
                android:startColor="#beffa8"
                android:angle="90" />
            <stroke
                android:width="2dp"
                android:color="#CCCCCC" />
            <corners
                android:radius="15dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>