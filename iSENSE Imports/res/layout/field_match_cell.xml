<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listelement_bkgd_changer"
    android:orientation="horizontal"
    android:padding="10dp"
    android:weightSum="1" >

    <TextView
        android:id="@+id/field_match_cell_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".5"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:singleLine="true"
        android:text="@string/project_field"
        android:textSize="14sp" />

    <Spinner
        android:id="@+id/field_match_cell_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:layout_weight=".5"
        android:entries="@array/isense_fields_array"
        android:prompt="@string/isense_fields" />

</LinearLayout>