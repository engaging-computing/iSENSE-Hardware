<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
   	android:layout_height="wrap_content"
   	android:orientation="vertical">
    
    	<TextView
	        android:id="@+id/experiment_prompt"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dip"
	        android:layout_marginRight="10dip"
	        android:text="@string/expr_msg"
	        android:textAppearance="?android:attr/textAppearanceMedium"/>
    	
    	<ScrollView
    	    android:id="@+id/exprScroll"
    	    android:layout_width="fill_parent"
    	    android:layout_height="300dp"
    	    android:layout_marginLeft="10dp"
    	    android:layout_marginRight="10dp"
    	    android:layout_marginTop="15dip" android:layout_gravity="center_horizontal">
    	    <LinearLayout
    	        android:id="@+id/exprList"
    	        android:layout_width="fill_parent"
    	        android:layout_height="wrap_content"
    	        android:orientation="vertical"
    	     />
    	</ScrollView>
		
		<LinearLayout
		    android:id="@+id/experiment_button_layout"
		    android:layout_marginTop="10dp"
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:layout_gravity="center_horizontal">
	
			<Button
			    android:id="@+id/experiment_back"
			    android:layout_width="0dp"
			    android:layout_height="wrap_content"
			    android:layout_weight="2"
			    android:text="@string/button_backpage"
			    android:textAppearance="?android:attr/textAppearanceMedium" />

			<TextView
			    android:id="@+id/currPageInd"
			    android:layout_width="0dp"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="5dp"
			    android:layout_marginRight="5dp"
			    android:layout_weight="1"
			    android:gravity="center_horizontal"
			    android:text="Page 1"
			    android:textAppearance="?android:attr/textAppearanceMedium" />

			<Button
			    android:id="@+id/experiment_forward"
			    android:layout_width="0dp"
			    android:layout_height="wrap_content"
			    android:layout_weight="2"
			    android:text="@string/button_nextpage"
			    android:textAppearance="?android:attr/textAppearanceMedium" />
	
		</LinearLayout>
</LinearLayout>