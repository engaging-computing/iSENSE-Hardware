<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
     android:clickable="false" android:background="@drawable/bg_launch" android:contentDescription="No Pinpoint Found, Tap to Connect">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/raaclogo" android:layout_marginTop="20dp"/>
    
    <ImageButton
        android:id="@+id/pinpoint_select_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/nopptbtn" android:background="@null"/>

</RelativeLayout>